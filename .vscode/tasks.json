{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "-g",
                "main.cpp",
                "--std=c++14",
                "-o",
                "\"${workspaceFolder}/${fileBasenameNoExtension}.exe\""
            ]
        }
    ]
}